{
  "name": "money-flow",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    
    "// Database scripts": "",
    "db:init": "node scripts/init-db.js",
    "db:reset": "node scripts/init-db.js --reset --force",
    "db:seed": "node scripts/seed.js",
    "db:seed:dev": "NODE_ENV=development node scripts/seed.js --dev",
    "db:cleanup": "node scripts/cleanup.js",
    "db:migrate": "node scripts/migrate.js",
    "db:rollback": "node scripts/migrate.js rollback",
    "db:create-migration": "node scripts/migrate.js create",
    
    "// Development scripts": "",
    "dev:with-db": "npm run db:init && npm run dev",
    "dev:clean": "npm run db:reset && npm run db:seed:dev && npm run dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    
    "// Deployment scripts": "",
    "deploy": "npm run test:ci && npm run build && copilot deploy",
    "deploy:init": "copilot init",
    "deploy:env": "copilot env init",
    "deploy:status": "copilot svc status",
    "deploy:logs": "copilot svc logs",
    "deploy:db-migrate": "NODE_ENV=production npm run db:migrate",
    
    "// Testing scripts": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --detectOpenHandles --forceExit",
    "test:db": "jest --testPathPattern=__tests__/db",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:smoke": "cross-env NODE_ENV=production jest __tests__/smoke --runInBand",
    "test:smoke:staging": "cross-env NODE_ENV=staging jest __tests__/smoke --runInBand",
    "test:smoke:prod": "cross-env NODE_ENV=production jest __tests__/smoke --runInBand",
    "postdeploy": "npm run test:smoke:staging"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie": "^0.6.0",
    "zod": "^3.22.4",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1",
    "react-hook-form": "^7.48.0",
    "recharts": "^2.9.0",
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.4",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-cypress": "^2.15.1",
    "prettier": "^3.0.3",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "supertest": "^6.3.3",
    "cypress": "^13.3.1",
    "nyc": "^15.1.0",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.36",
    "@types/jest": "^29.5.7",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

