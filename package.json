{
  "name": "money-flow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "chmod +x scripts/setup.js && node scripts/setup.js",
    
    "// Database scripts": "",
    "db:init": "node scripts/init-db.js",
    "db:reset": "node scripts/init-db.js --reset --force",
    "db:seed": "node scripts/seed.js",
    "db:seed:dev": "node scripts/seed.js --dev",
    "db:cleanup": "node scripts/cleanup.js",
    "db:migrate": "node scripts/migrate.js",
    "db:rollback": "node scripts/migrate.js rollback",
    "db:create-migration": "node scripts/migrate.js create",
    
    "// Development scripts": "",
    "dev:with-db": "npm run db:init && npm run dev",
    "dev:clean": "npm run db:reset && npm run db:seed:dev && npm run dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    
    "// Deployment scripts": "",
    "deploy": "npm run build && copilot deploy",
    "deploy:init": "copilot init",
    "deploy:env": "copilot env init",
    "deploy:status": "copilot svc status",
    "deploy:logs": "copilot svc logs",
    "deploy:db-migrate": "NODE_ENV=production npm run db:migrate",
    
    "// Testing scripts": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --detectOpenHandles",
    "test:db": "jest --testPathPattern=__tests__/db",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:smoke": "cross-env NODE_ENV=production jest __tests__/smoke --runInBand",
    "test:smoke:staging": "cross-env NODE_ENV=staging API_URL=https://staging-api.example.com jest __tests__/smoke --runInBand",
    "test:smoke:prod": "cross-env NODE_ENV=production API_URL=https://api.example.com jest __tests__/smoke --runInBand",
    "postdeploy": "npm run test:smoke:staging"
  },
  "dependencies": {
    "next": "^13.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "pg": "^8.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "cookie": "^0.5.0",
    "zod": "^3.21.0",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.0",
    "react-hook-form": "^7.44.0",
    "recharts": "^2.6.0",
    "@chakra-ui/react": "^2.7.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.12.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-next": "^13.4.0",
    "prettier": "^2.8.0",
    "dotenv": "^16.1.0",
    "nodemon": "^2.0.22",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "supertest": "^6.3.3",
    "cypress": "^12.12.0",
    "nyc": "^15.1.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}

